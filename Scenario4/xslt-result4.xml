        <Recette id="1">
            <Nom> Mousse au chocolat </Nom>
            <Nombre_de_personnes> 6 </Nombre_de_personnes>
            <Image>https://img.cuisineaz.com/1280x720/2017/05/09/i125843-mousse-au-chocolat-au-lait.jpeg</Image>
            <Ingredients>
                <Ingredient idIngredient="1"/>
                <Ingredient idIngredient="2"/>
                <Ingredient idIngredient="3"/>
            </Ingredients>
            <EtapesDeRecette>
                <EtapesDeRecette>
                    <Etape> Faire fondre le chocolat au bain marie </Etape>
                    <Etape> Séparer les blancs des jaunes d'oeufs </Etape>
                    <Etape> Mélanger le chocolat fondu avec les jaunes d'oeufs et le sucre </Etape>
                    <Etape> Monter les blancs en neige </Etape>
                    <Etape> Incorporer les blancs en neige au mélange chocolat-oeufs </Etape>
                    <Etape> Mettre au frais pendant 2h</Etape>
                </EtapesDeRecette>
            </EtapesDeRecette>
            <Commentaires/>
        </Recette>
        <Recette id="2">
            <Nom> Tarte aux pommes </Nom>
            <Nombre_de_personnes> 6 </Nombre_de_personnes>
            <Image>https://assets.afcdn.com/recipe/20230127/139908_w1024h1024c1cx1059cy707cxt0cyt0cxb2119cyb1414.webp</Image>
            <Ingredients>
                <Ingredient idIngredient="4"/>
                <Ingredient idIngredient="5"/>
                <Ingredient idIngredient="3"/>
                <Ingredient idIngredient="6"/>
            </Ingredients>
            <EtapesDeRecette>
                <EtapesDeRecette>
                    <Etape> Préchauffer le four à 180°C </Etape>
                    <Etape> Etaler la pâte brisée dans un moule à tarte </Etape>
                    <Etape> Eplucher et couper les pommes en lamelles </Etape>
                    <Etape> Disposer les lamelles de pommes sur la pâte </Etape>
                    <Etape> Saupoudrer de sucre et de cannelle </Etape>
                    <Etape> Enfourner pendant 30 minutes </Etape>
                </EtapesDeRecette>
            </EtapesDeRecette>
            <Commentaires/>
        </Recette>
        <Recette id="3">
            <Nom> Samossa boeuf</Nom>
            <Nombre_de_personnes> 6 </Nombre_de_personnes>
            <Image>https://www.ecomiam.com/images/Image/recette-Samoussas-de-boeuf-1-2.png</Image>
            <Ingredients>
                <Ingredient idIngredient="7"/>
                <Ingredient idIngredient="8"/>
                <Ingredient idIngredient="9"/>
                <Ingredient idIngredient="10"/>
                <Ingredient idIngredient="11"/>
            </Ingredients>
            <EtapesDeRecette>
                <EtapesDeRecette>
                    <Etape> Faire revenir l'oignon dans une poêle </Etape>
                    <Etape> Ajouter la viande hachée et les épices </Etape>
                    <Etape> Laisser cuire 10 minutes </Etape>
                    <Etape> Couper les feuilles de brick en deux </Etape>
                    <Etape> Disposer une cuillère à soupe de farce sur chaque demi-feuille </Etape>
                    <Etape> Plier les feuilles en triangle </Etape>
                    <Etape> Faire frire les samoussas dans de l'huile chaude </Etape>
                </EtapesDeRecette>
            </EtapesDeRecette>
            <Commentaires/>
        </Recette>
